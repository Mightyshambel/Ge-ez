# comprehensive_break_continue_test.geez - Comprehensive Break/Continue test
# This file demonstrates all break/continue features working correctly

рѕЏрЅ░рѕЮ "=== Comprehensive Break/Continue Test ==="
рѕЏрЅ░рѕЮ ""

# Test 1: Break in While Loop
рѕЏрЅ░рѕЮ "1. Break in While Loop..."
ріарѕхрЅ░рІІрІЇрЅЁ рЅєрїарѕФ = 0
рЅарѕўрѕєріЉ рЅєрїарѕФ < 10 {
    рЅєрїарѕФ = рЅєрїарѕФ + 1
    рѕЏрЅ░рѕЮ "   Count:" + рЅєрїарѕФ
    ріерѕєріљ рЅєрїарѕФ == 5 {
        рѕЏрЅ░рѕЮ "   Breaking at 5!"
        рЅ░рѕ░рЅЦрѕГ
    }
}
рѕЏрЅ░рѕЮ "   Final count:" + рЅєрїарѕФ

# Test 2: Continue in While Loop
рѕЏрЅ░рѕЮ "2. Continue in While Loop..."
ріарѕхрЅ░рІІрІЇрЅЁ рЅєрїарѕФ_2 = 0
рЅарѕўрѕєріЉ рЅєрїарѕФ_2 < 8 {
    рЅєрїарѕФ_2 = рЅєрїарѕФ_2 + 1
    ріерѕєріљ рЅєрїарѕФ_2 == 3 рІѕрІГрѕЮ рЅєрїарѕФ_2 == 6 {
        рѕЏрЅ░рѕЮ "   Skipping:" + рЅєрїарѕФ_2
        рЅђрїЦрѕЇ
    }
    рѕЏрЅ░рѕЮ "   Processing:" + рЅєрїарѕФ_2
}

# Test 3: Nested While Loops with Break
рѕЏрЅ░рѕЮ "3. Nested While Loops with Break..."
ріарѕхрЅ░рІІрІЇрЅЁ рІЇрїФрІі = 0
рЅарѕўрѕєріЉ рІЇрїФрІі < 3 {
    рѕЏрЅ░рѕЮ "   Outer loop:" + рІЇрїФрІі
    ріарѕхрЅ░рІІрІЇрЅЁ рІЇрѕхрїБрІі = 0
    рЅарѕўрѕєріЉ рІЇрѕхрїБрІі < 5 {
        рІЇрѕхрїБрІі = рІЇрѕхрїБрІі + 1
        рѕЏрЅ░рѕЮ "     Inner loop:" + рІЇрѕхрїБрІі
        ріерѕєріљ рІЇрѕхрїБрІі == 2 {
            рѕЏрЅ░рѕЮ "     Breaking inner loop at 2!"
            рЅ░рѕ░рЅЦрѕГ
        }
    }
    рІЇрїФрІі = рІЇрїФрІі + 1
    рѕЏрЅ░рѕЮ "   Back to outer loop"
}

# Test 4: Complex Break/Continue Logic
рѕЏрЅ░рѕЮ "4. Complex Break/Continue Logic..."
ріарѕхрЅ░рІІрІЇрЅЁ рІерЅ░рїѕріў_рЅЂрїЦрѕГ = 0
ріарѕхрЅ░рІІрІЇрЅЁ рЅєрїарѕФ_3 = 0
рЅарѕўрѕєріЉ рЅєрїарѕФ_3 < 20 {
    рЅєрїарѕФ_3 = рЅєрїарѕФ_3 + 1
    
    # Skip multiples of 3
    ріерѕєріљ рЅєрїарѕФ_3 == 3 рІѕрІГрѕЮ рЅєрїарѕФ_3 == 6 рІѕрІГрѕЮ рЅєрїарѕФ_3 == 9 рІѕрІГрѕЮ рЅєрїарѕФ_3 == 12 рІѕрІГрѕЮ рЅєрїарѕФ_3 == 15 рІѕрІГрѕЮ рЅєрїарѕФ_3 == 18 {
        рѕЏрЅ░рѕЮ "   Skipping multiple of 3:" + рЅєрїарѕФ_3
        рЅђрїЦрѕЇ
    }
    
    # Skip multiples of 5
    ріерѕєріљ рЅєрїарѕФ_3 == 5 рІѕрІГрѕЮ рЅєрїарѕФ_3 == 10 рІѕрІГрѕЮ рЅєрїарѕФ_3 == 15 {
        рѕЏрЅ░рѕЮ "   Skipping multiple of 5:" + рЅєрїарѕФ_3
        рЅђрїЦрѕЇ
    }
    
    # Break when we find a number greater than 15
    ріерѕєріљ рЅєрїарѕФ_3 > 15 {
        рѕЏрЅ░рѕЮ "   Found number greater than 15:" + рЅєрїарѕФ_3
        рІерЅ░рїѕріў_рЅЂрїЦрѕГ = рЅєрїарѕФ_3
        рЅ░рѕ░рЅЦрѕГ
    }
    
    рѕЏрЅ░рѕЮ "   Processing:" + рЅєрїарѕФ_3
}

рѕЏрЅ░рѕЮ "   Final found number:" + рІерЅ░рїѕріў_рЅЂрїЦрѕГ

# Test 5: Break/Continue in Function
рѕЏрЅ░рѕЮ "5. Break/Continue in Function..."
рЅ░рїЇрЅБрѕГ рІерѕЅрЇЋ_рЇѕрЅ░ріЊ() {
    ріарѕхрЅ░рІІрІЇрЅЁ рЅєрїарѕФ_4 = 0
    рЅарѕўрѕєріЉ рЅєрїарѕФ_4 < 6 {
        рЅєрїарѕФ_4 = рЅєрїарѕФ_4 + 1
        ріерѕєріљ рЅєрїарѕФ_4 == 2 {
            рѕЏрЅ░рѕЮ "   Function: Skipping:" + рЅєрїарѕФ_4
            рЅђрїЦрѕЇ
        }
        ріерѕєріљ рЅєрїарѕФ_4 == 4 {
            рѕЏрЅ░рѕЮ "   Function: Breaking at:" + рЅєрїарѕФ_4
            рЅ░рѕ░рЅЦрѕГ
        }
        рѕЏрЅ░рѕЮ "   Function: Processing:" + рЅєрїарѕФ_4
    }
    рѕЏрЅ░рѕЮ "   Function completed"
}

рІерѕЅрЇЋ_рЇѕрЅ░ріЊ()

